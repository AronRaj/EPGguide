<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_program_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_program_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_program_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_program_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Description"/>

    <TextView
        android:id="@+id/tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_program_title"
        android:layout_toRightOf="@id/tv_program_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="New"/>

</RelativeLayout>